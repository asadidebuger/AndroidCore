<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="fill_parent" android:layout_width="wrap_content"
              android:background="@drawable/back_tabs_simple"
              android:gravity="center">
    <ScrollView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scroll_tabs"
                android:scrollbars="vertical"
                style="@style/scrollbar_style">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                      android:orientation="vertical" android:background="@color/color_tabs_space">
            <view android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  class="ir.microsign.view.VerticalTextView" android:id="@+id/txt_setting_title_appearance"
                  android:text="@string/setting_title_appearance"
                  android:background="@drawable/selectable_tabs" android:textSize="14sp"
                  android:textColor="@color/white"
                  android:gravity="left" android:paddingTop="4dp" android:paddingBottom="4dp"/>
            <view class="ir.microsign.view.VerticalTextView" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:id="@+id/txt_setting_title_connection"
                  android:text="@string/setting_title_connection"
                  android:background="@drawable/selectable_tabs" android:textSize="14sp"
                  android:textColor="@color/white"
                  android:layout_marginTop="1px" android:paddingTop="4dp" android:paddingBottom="4dp"/>
            <view class="ir.microsign.view.VerticalTextView" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:id="@+id/txt_setting_title_advance"
                  android:text="@string/setting_title_advance"
                  android:background="@drawable/selectable_tabs" android:textSize="14sp"
                  android:textColor="@color/white"
                  android:layout_marginTop="1px" android:paddingTop="4dp" android:paddingBottom="4dp"
                    />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
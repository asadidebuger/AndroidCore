<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:id="@+id/ll_root" android:gravity="center_vertical"
        >

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" style="@style/scrollbar_style">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:gravity="center">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:gravity="center"
                    android:background="@color/color_main_header_background" android:layout_gravity="right"
                    android:layout_alignParentRight="true">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/txt_title" android:gravity="center" android:textColor="@color/color_main_header_txt"
                        android:padding="5dp" android:minWidth="100dp"/>
            </LinearLayout>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_icon" android:adjustViewBounds="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"/>
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="New Text"
                      android:id="@+id/txt_description1" android:gravity="center"
                      android:textColor="@color/color_gray1" android:padding="5dp"/>
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="New Text"
                      android:id="@+id/txt_description2" android:gravity="center"
                      android:textColor="@color/color_gray1" android:padding="5dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="New Button"
                        android:id="@+id/btn1" android:layout_weight="2"
                        android:background="@drawable/back_selectable_btn" android:textColor="@color/white"
                        android:gravity="center" android:padding="5dp" android:clickable="true"
                        android:layout_marginLeft="5dp"/>
                <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:text="New Button"
                          android:id="@+id/btn2" android:layout_weight="1"
                          android:background="@drawable/back_selectable_btn" android:textColor="@color/white"
                          android:gravity="center" android:padding="5dp" android:layout_marginLeft="1px"
                          android:clickable="true" android:layout_marginRight="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
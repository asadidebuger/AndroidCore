<?xml version="1.0" encoding="utf-8"?>
<view xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      class="androidx.drawerlayout.widget.DrawerLayout" android:id="@+id/drawer_layout">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/header_height"
                android:background="@color/color_main_header_background"
                android:id="@+id/include" android:layout_marginBottom="1dp">

            <ImageView android:layout_width="38dp" android:layout_height="fill_parent"
                       android:id="@+id/img_header_setting2" android:layout_alignTop="@+id/img_header_icon"
                       android:layout_alignBottom="@+id/img_header_icon" android:layout_alignParentRight="true"
                       android:adjustViewBounds="false" android:scaleType="fitXY"
                       android:src="@drawable/back_selectable_ballet" android:layout_marginLeft="-5dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_gravity="center_vertical|right"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:id="@+id/ll_header_container">
                <ImageView android:layout_width="wrap_content" android:layout_height="fill_parent"
                           android:id="@+id/img_header_back"
                           android:src="@drawable/icon_back_white" android:scaleType="centerInside"
                           android:adjustViewBounds="true"
                        />
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" android:layout_weight="1"
                        android:gravity="center">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/img_search" android:src="@drawable/icon_search_white" android:padding="5dp"/>
                    <AutoCompleteTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/etxt_search"
                            android:scrollbars="none"
                            android:background="@drawable/edit_text_holo_light"
                            android:minWidth="120dp"
                            android:singleLine="true" android:maxLength="30"
                            android:imeOptions="flagNoFullscreen|actionSearch|flagNoExtractUi"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/color_main_header_txt" android:layout_weight="1"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/img_clear" android:src="@drawable/icon_close_white" android:padding="5dp"
                    />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <include android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 layout="@layout/layout_content_web" android:layout_weight="1"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:layout_gravity="center"
                      android:id="@+id/ll_next_prev">
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:text="@string/search_prev" android:id="@+id/btn_prev" android:padding="5dp"
                      android:gravity="center" android:textColor="@color/white"
                      android:background="@drawable/back_selectable_btn" android:layout_weight="1"/>
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:text="@string/search_next" android:id="@+id/btn_next" android:padding="5dp"
                      android:gravity="center" android:textColor="@color/white"
                      android:background="@drawable/back_selectable_btn" android:layout_weight="1"
                      android:layout_marginLeft="1dp"/>
        </LinearLayout>
    </LinearLayout>
    <ir.microsign.contentcore.view.SearchOptionsView
            android:id="@+id/search_options" android:layout_width="wrap_content" android:layout_height="fill_parent"
            android:layout_gravity="start"
            android:background="@drawable/back_simple_slide_menu"/>
</view>
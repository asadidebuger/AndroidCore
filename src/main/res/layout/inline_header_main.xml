<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/back_tabs_simple1"
        android:id="@+id/ll_header_root"
        tools:showIn="@layout/layout_main">

    <ImageView android:layout_width="40dp" android:layout_height="fill_parent"
               android:id="@+id/img_header_setting2"
               android:adjustViewBounds="false" android:scaleType="fitXY"
               android:src="@drawable/back_selectable_ballet" android:layout_marginLeft="-5dp"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="fill_parent"
               android:id="@+id/img_header_back"
               android:src="@drawable/icon_exit" android:scaleType="centerInside"
               android:adjustViewBounds="true"
               android:layout_marginLeft="5dp" android:layout_marginRight="10dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/img_search" android:src="@drawable/icon_search"
            android:adjustViewBounds="true"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="fill_parent"
               android:id="@+id/img_full_screen"
               android:src="@drawable/icon_full_screen" android:adjustViewBounds="true"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="center_vertical|right"
            android:id="@+id/ll_header_container" android:gravity="bottom|right" android:layout_weight="1">
        <HorizontalScrollView android:layout_width="wrap_content" android:layout_height="wrap_content"

                              android:id="@+id/hscrol_top" style="@style/scrollbar_style"
        >
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:id="@+id/ll_top" android:background="@color/color_headlines_bottom_border">
                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="wrap_content"
                          android:layout_height="@dimen/header_height" android:id="@+id/txt_top_menu6"
                          android:text="title"
                          android:background="@drawable/selectable_tabs1"
                          android:textColor="@color/color_main_header_txt" android:layout_gravity="right"
                          android:layout_marginRight="1px" android:paddingRight="5dp"
                          android:paddingLeft="5dp" android:gravity="center" android:visibility="gone"/>
                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="wrap_content"
                          android:layout_height="@dimen/header_height" android:id="@+id/txt_top_menu5"
                          android:text="title"
                          android:background="@drawable/selectable_tabs1"
                          android:textColor="@color/color_main_header_txt" android:layout_gravity="right"
                          android:layout_marginRight="1px" android:paddingRight="5dp"
                          android:paddingLeft="5dp" android:gravity="center" android:visibility="gone"/>
                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="wrap_content"
                          android:layout_height="@dimen/header_height" android:id="@+id/txt_top_menu4"
                          android:text="title"
                          android:background="@drawable/selectable_tabs1"
                          android:textColor="@color/color_main_header_txt" android:layout_gravity="right"
                          android:layout_marginRight="1px" android:paddingRight="5dp"
                          android:paddingLeft="5dp" android:gravity="center"/>
                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="wrap_content"
                          android:layout_height="@dimen/header_height" android:id="@+id/txt_top_menu3"
                          android:text="title"
                          android:background="@drawable/selectable_tabs1"
                          android:textColor="@color/color_main_header_txt" android:layout_gravity="right"
                          android:layout_marginRight="1px" android:paddingRight="5dp"
                          android:paddingLeft="5dp" android:gravity="center"/>
                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="wrap_content"
                          android:layout_height="@dimen/header_height" android:id="@+id/txt_top_menu2"
                          android:text="title"
                          android:background="@drawable/selectable_tabs1"
                          android:textColor="@color/color_main_header_txt" android:layout_gravity="right"
                          android:layout_marginRight="1px" android:paddingRight="5dp"
                          android:paddingLeft="5dp" android:gravity="center"/>
                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="wrap_content"
                          android:layout_height="@dimen/header_height" android:id="@+id/txt_top_menu1"
                          android:text="title"
                          android:background="@drawable/selectable_tabs1"
                          android:textColor="@color/color_main_header_txt" android:layout_gravity="right"
                          android:layout_marginRight="1px" android:paddingRight="5dp"
                          android:paddingLeft="5dp" android:gravity="center"/>
                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="wrap_content"
                          android:layout_height="@dimen/header_height" android:id="@+id/txt_top_menu0"
                          android:text="title"
                          android:background="@drawable/selectable_tabs1"
                          android:textColor="@color/color_main_header_txt" android:layout_gravity="right"
                          android:layout_marginRight="1px" android:paddingRight="5dp"
                          android:paddingLeft="5dp" android:gravity="center"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <ImageView
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:id="@+id/img_header_settings"
            android:adjustViewBounds="false"
            android:src="@drawable/back_selectable_ballet" android:scaleType="fitXY"/>

</LinearLayout>
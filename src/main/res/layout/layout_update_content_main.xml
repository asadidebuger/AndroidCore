<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >

    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:background="@drawable/back_tabs_simple1"
                  android:id="@+id/linearLayout12">
        <ImageView android:layout_width="wrap_content" android:layout_height="fill_parent"
                   android:id="@+id/img_back" android:src="@drawable/icon_exit_white"
                   android:scaleType="centerInside" android:adjustViewBounds="true" android:layout_marginLeft="5dp"
                   android:layout_marginRight="10dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:layout_gravity="center_vertical|right"
                      android:id="@+id/linearLayout11" android:gravity="bottom|right" android:layout_weight="1">
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                          android:layout_height="wrap_content" android:layout_gravity="bottom"
                          android:id="@+id/linearLayout6" android:background="@color/color_headlines_bottom_border">
                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="fill_parent" android:layout_height="@dimen/header_height"
                          android:id="@+id/txt_title" android:text="@string/txt_update_main_title"
                          android:background="@drawable/selectable_tabs1"
                          android:textColor="@color/color_main_header_txt" android:layout_gravity="right"
                          android:layout_marginRight="1px" android:paddingRight="5dp" android:paddingLeft="5dp"
                          android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ir.microsign.contentcore.view.RichWebView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/web_content"
            style="@style/scrollbar_style_outside"
            android:paddingTop="5dp" android:paddingBottom="5dp" android:paddingRight="2dp" android:paddingLeft="2dp"
            android:layout_weight="1" />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/group_firstProgress">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="left|right" android:paddingRight="5dp" android:paddingLeft="5dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_p1_desc"
                    android:layout_gravity="bottom|left"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:minWidth="70dp" android:textSize="16dp" android:textColor="@color/color_gray0"/>

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/update_main_progress_prepare"
                    android:id="@+id/txt_p1_title"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:padding="2dp"
                    android:textSize="16dp" android:textColor="@color/color_gray0"/>

        </LinearLayout>

        <ProgressBar
                android:id="@+id/progressBarHorizontal1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:progress="50"
                android:progressDrawable="@drawable/progress_first"/>

    </LinearLayout>


    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical"
                  android:padding="5dp" android:id="@+id/ll_progress_ui_root">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_update_main_update"
                android:id="@+id/txt_update" android:background="@drawable/back_selectable_light_btn"
                android:padding="10dp" android:gravity="center" android:layout_marginTop="5dp"
                android:textColor="@color/color_gray0"/>
    </LinearLayout>
</LinearLayout>
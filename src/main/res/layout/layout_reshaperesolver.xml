<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="10dp" android:background="@drawable/dialogborder">
<ScrollView android:scrollbarStyle="outsideInset" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/scrollbar_style">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Persian Reshape"
            android:id="@+id/textView" android:textSize="18dp" android:textStyle="bold"
            android:textColor="@color/color_gray0"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="If Persian texts are not displayed correctly on your device, please switch on or off to see the correct Persian Text"
                  android:id="@+id/textView1" android:textStyle="italic" android:textSize="12dp"
                  android:layout_weight="1" android:padding="4dp" android:textColor="@color/color_gray0"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/persian_text"
                android:id="@+id/txt_persianText" android:textSize="18dp"
                android:textColor="@color/color_gray0" android:layout_weight="1"
                android:layout_gravity="center_vertical" android:padding="5dp"/>
        <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New ToggleButton"
                android:id="@+id/btn_switch"/>
    </LinearLayout> <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ir.microsign.view.ViewHtml
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/persian_text"
                android:id="@+id/web_content" android:textSize="18dp"
                android:textColor="@color/color_gray0" android:layout_weight="1"
                android:layout_gravity="center_vertical" android:padding="2dp"
           android:background="@color/color_message_box_background"
            />
        <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New ToggleButton"
                android:id="@+id/btn_switch_web"/>
    </LinearLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/ok"
            android:id="@+id/btn_ok" android:layout_gravity="center_horizontal" android:layout_margin="5dp"
            android:paddingLeft="25dp" android:paddingRight="25dp"/>
</LinearLayout>
</ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/back_selectable_notification_item"
                android:id="@+id/rl_root">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:orientation="vertical" android:id="@+id/ll_root">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/simple_border_notification_top"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal|top"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/notify_largeicon" />

            <ImageView
                android:id="@+id/img_link"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal|top"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_set_as" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txt_description"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="1dp"
                android:text="Title"
                android:textColor="#004b8b"
                android:textSize="17dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_close" />
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="1"
                android:id="@+id/ll_details" android:layout_marginTop="3dp"
                android:background="@drawable/simple_border_notification">
            <view android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  class="ir.microsign.view.ViewImageHtml" android:id="@+id/webview_content"
                  style="@style/scrollbar_style"
                  android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

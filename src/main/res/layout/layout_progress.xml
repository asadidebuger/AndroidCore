<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/ll_root">

    <LinearLayout
            android:background="@drawable/dialogborder"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:id="@+id/txt_progress_Title"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:minHeight="30dp"
                    android:paddingBottom="10dp"
                    android:textSize="18dp"
                    android:textStyle="bold" android:textColor="@color/color_gray0"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/img_progress_cancel"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:baselineAlignBottom="false"
                    android:cropToPadding="false"/>

        </LinearLayout>
        <LinearLayout
                android:id="@+id/linear_view_progressbars"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp" android:layout_marginRight="5dp" android:layout_marginLeft="5dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/group_firstProgress">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left|right">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/txt_p1_desc"
                            android:layout_gravity="bottom|left"
                            android:padding="2dp"
                            android:singleLine="true"
                            android:minWidth="70dp" android:textSize="16dp" android:textColor="@color/color_gray0"/>

                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/txt_p1_title"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:padding="2dp"
                            android:textSize="16dp" android:textColor="@color/color_gray0"/>

                </LinearLayout>

                <ProgressBar
                        android:id="@+id/progressBarHorizontal1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="4dp"
                        android:progress="50"
                        android:progressDrawable="@drawable/progress_first"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/group_secondProgress"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="5dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left|right">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/txt_p2_desc"
                            android:layout_gravity="bottom|left"
                            android:padding="2dp"
                            android:singleLine="true"
                            android:minWidth="70dp" android:textSize="16dp" android:textColor="@color/color_gray0"/>

                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/txt_p2_title"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:padding="2dp"
                            android:textSize="16dp" android:textColor="@color/color_gray0"/>
                </LinearLayout>

                <ProgressBar
                        android:id="@+id/progressBarHorizontal2"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="10dp"
                        android:progress="50"
                        android:progressDrawable="@drawable/progress_second"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@color/white"
                android:id="@+id/rl_fullcontent_fragment_root">
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:src="@drawable/metro_white" android:layout_alignParentBottom="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>
    <ir.microsign.content.view.PagerView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/pager">
        <ir.microsign.content.view.PagerTitleStrip
                android:id="@+id/pager_title_strip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_height"
                android:layout_gravity="top"
                android:background="@color/color_full_content_header"
                android:textColor="#fff"
                android:paddingTop="4dp"
                android:paddingBottom="0dp"
                android:paddingLeft="36dp" android:paddingRight="31dp">
        </ir.microsign.content.view.PagerTitleStrip>

    </ir.microsign.content.view.PagerView>
    <ImageView android:layout_width="35dp" android:layout_height="@dimen/header_height"
               android:id="@+id/img_header_back"
               android:src="@drawable/icon_back_white" android:scaleType="centerInside"
               android:adjustViewBounds="true"
               android:layout_alignParentLeft="true"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="@dimen/header_height"
            android:id="@+id/img_header_settings"
            android:adjustViewBounds="false"
            android:src="@drawable/back_selectable_ballet" android:scaleType="fitXY"
            android:layout_alignParentRight="true"/>

</RelativeLayout>
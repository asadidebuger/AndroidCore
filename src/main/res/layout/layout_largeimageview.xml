<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/large_imageView"
            android:adjustViewBounds="true"
            android:minHeight="10dp"
            android:minWidth="10dp"
            android:src="@drawable/border"
            android:padding="4dp"
            android:background="@drawable/largeimageborder" android:layout_centerInParent="true"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_close"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_gravity="right|top"
            android:layout_alignTop="@+id/large_imageView" android:layout_alignRight="@+id/large_imageView"/>
    <view
            android:layout_width="10dp"
            android:layout_height="10dp"
            class="ir.microsign.view.HorizontalListView3d"
            android:id="@+id/hListView3d"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="4dp" android:layout_marginLeft="4dp"
            android:layout_alignBottom="@+id/large_imageView" android:layout_alignRight="@+id/large_imageView"
            android:layout_alignLeft="@+id/large_imageView"/>

</RelativeLayout>
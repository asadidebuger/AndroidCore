<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:orientation="horizontal"
              android:id="@+id/ll_root">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/category_item_height"
            android:background="@drawable/back_selectable_category_even"
            android:gravity="center" android:id="@+id/ll_root2">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:id="@+id/rl_image_root">
            <ImageView
                    android:layout_width="@dimen/category_item_height"
                    android:layout_height="fill_parent"
                    android:id="@+id/img_image"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/border_light_right_round"
                    />
            <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/prg_wait" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:id="@+id/ll_title"
                android:paddingLeft="2dp">
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="titr"
                      android:id="@+id/txt_titr"

                      android:textSize="15sp" android:textColor="@color/color_category_title"
                      style="@style/TextViewShadow_light"
                      android:paddingLeft="3dp" android:paddingRight="3dp"
                      android:paddingTop="5dp"
                      android:paddingBottom="5dp" android:layout_weight="1" android:gravity="right"
                      android:textStyle="bold"/>
            <ImageView
                    android:layout_width="10dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/img_intent" android:src="@drawable/intent" android:adjustViewBounds="true"

                    android:layout_gravity="center_vertical" android:layout_marginRight="2dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
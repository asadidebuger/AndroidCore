<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
               xmlns:tools="http://schemas.android.com/tools"
               xmlns:app="http://schemas.android.com/apk/res-auto"
               android:layout_width="fill_parent"
               android:layout_height="fill_parent" android:orientation="vertical"
               android:layout_weight="1">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:background="@drawable/bac_simple_headlines"
            android:gravity="center">
        <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etxt_filter"
                    android:imeOptions="flagNoFullscreen|actionNone"

                    android:background="@drawable/edit_text_holo_light" android:singleLine="true"
                    android:maxLength="20" android:textColor="@color/color_tabs_text" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/img_clear" android:src="@drawable/icon_close_white" android:scaleType="centerInside"/>
    </LinearLayout>
    <com.nirhart.parallaxscroll.views.ParallaxListView
        android:id="@+id/list_view0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        style="@style/scrollbar_style"
        android:layout_weight="1"
        android:dividerHeight="1px"
        android:divider="@color/color_list_spaces"
        android:listSelector="@color/color_transparent"
        android:background="@drawable/bac_simple_headlines"
        app:parallax_factor="1.9"
        app:circular_parallax="true"
        tools:showIn="@layout/layout_main"
        /></LinearLayout>
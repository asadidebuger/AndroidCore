<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/rl_viewContainer"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:background="#dddddd">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/color_picker_title"
            android:id="@+id/txt_title" android:padding="5dp" android:gravity="center" android:textColor="@color/white"
            android:background="@color/color_gray0"/>
    <include layout="@layout/inline_color_picker_container" android:layout_height="fill_parent"
             android:layout_width="fill_parent" android:layout_weight="1" android:id="@+id/inline_container"
            />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:text="@string/ok" android:id="@+id/txt_ok" android:padding="5dp"
                  android:gravity="center" android:textColor="@color/white"
                  android:background="@drawable/back_selectable_btn"
                  android:layout_weight="1"/>
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/cancel"
                  android:id="@+id/txt_cancel" android:padding="5dp" android:gravity="center"
                  android:textColor="@color/white" android:background="@drawable/back_selectable_btn"
                  android:layout_weight="1"
                  android:layout_marginLeft="1dp"/>
    </LinearLayout>
</LinearLayout>



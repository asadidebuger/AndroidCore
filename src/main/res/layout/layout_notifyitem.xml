<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_selectable_notification_item" android:id="@+id/rl_root"
                android:padding="2dp">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:orientation="vertical" android:id="@+id/ll_root">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/img_icon" android:layout_gravity="center_horizontal|top"
                    android:adjustViewBounds="true" android:scaleType="fitCenter"
                    android:src="@drawable/notify_largeicon"/>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="1">
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="wrap_content">
                    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                              android:layout_above="@+id/txt_description" android:textSize="17dp"
                              android:layout_centerHorizontal="true" android:paddingRight="10dp"
                              android:paddingLeft="10dp"
                              android:gravity="right" android:textStyle="bold" android:textColor="#004b8b"
                              android:text="Title"
                              android:paddingTop="1dp" android:layout_weight="1" android:id="@+id/txt_title"/>
                    <ImageView android:layout_width="15dp" android:layout_height="wrap_content"
                               android:id="@+id/img_intent"
                               android:src="@drawable/notify_titleintent" android:adjustViewBounds="true"
                               android:scaleType="fitStart"
                               android:layout_gravity="center_vertical" android:layout_marginRight="4dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/txt_date_exp"
                              android:textSize="10dp"
                              android:paddingRight="10dp" android:paddingLeft="10dp"
                              android:textColor="@color/tomato" android:text="Title"
                              android:layout_alignParentBottom="true"
                              android:layout_weight="1" android:gravity="center"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/txt_date" android:layout_above="@+id/txt_description"
                              android:textSize="10dp"
                              android:layout_centerHorizontal="true" android:paddingRight="10dp"
                              android:paddingLeft="10dp"
                              android:textColor="@color/tomato"
                              android:text="Title" android:paddingTop="1dp" android:layout_weight="1"
                              android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView android:layout_width="fill_parent" android:layout_height="60dp"
                  android:id="@+id/txt_description"
                  android:textColor="@color/color_gray1"
                  android:paddingBottom="5dp" android:paddingRight="2dp" android:paddingLeft="2dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="20dp" android:id="@+id/ll_overlay"
            android:background="@drawable/back_fade_bottom_to_top" android:layout_alignParentBottom="true">
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SeekBarAppTheme" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_holo_light</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/scrubber_control_selector_holo_light</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>
    <style name="scrollbar_style">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/scrollbar_horizontal</item>
        <!--<item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_holo</item>-->
        <!--<item name="android:fastScrollTrackDrawable">@drawable/fastscroll_thumb_holo</item>-->
    </style>

    <style name="scrollbar_style_outside" parent="scrollbar_style">
    <item name="android:scrollbarStyle">outsideInset</item>
    <item name="android:overScrollFooter">@drawable/transparent</item>
    <item name="android:overScrollHeader">@drawable/transparent</item>
</style>
    <style name="TextViewShadow">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">1</item>
    </style>
    <style name="TextViewShadow_light">
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">1</item>
    </style>
    <style name="mainStyle" parent="_holo">
        <item name="android:windowNoTitle">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/scrollbar_horizontal</item>

    </style>
    <style name="dialogStyle" parent="mainStyle">
        <item name="android:dialogTitle">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/scrollbar_horizontal</item>
    </style>
    <style name="ScrollTheme" parent="mainStyle">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/scrollbar_horizontal</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>
</resources>
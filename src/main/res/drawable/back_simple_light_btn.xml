<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:top="2dp" android:right="2dp" android:left="2dp"
          android:bottom="2dp">

        <shape android:shape="rectangle">
            <gradient android:angle="90" android:startColor="#ffebebeb" android:endColor="#dccecece"/>
            <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp"/>
            <stroke android:color="#52000000" android:width="1px"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>


</layer-list>
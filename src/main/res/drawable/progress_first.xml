<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">

        <shape>

            <corners android:radius="2dip"/>
            <stroke android:color="#e9e9e9"
                    android:width="1px"/>
            <gradient
                    android:startColor="#ffffff"

                    android:centerColor="#e7e8e8"
                    android:centerY="0.51"
                    android:type="linear"

                    android:endColor="#f2f2f2"
                    android:angle="0"
                    />

        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="1px"/>
                <gradient
                        android:startColor="#80ffd300"
                        android:centerColor="#80ffb600"
                        android:centerY="0.75"
                        android:endColor="#a0ffcb00"
                        android:angle="0"
                        />
            </shape>
        </clip>
    </item>
    <item
            android:id="@android:id/progress"
            >
        <clip>
            <shape>

                <corners
                        android:radius="2dp"/>
                <stroke android:color="#e9e9e9"
                        android:width="1px"/>
                <!--<padding android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp"/>-->
                <gradient
                        android:startColor="#cf00b4ff"
                        android:centerColor="#00b4ff"
                        android:endColor="#f300b4ff"

                        android:angle="0"/>
            </shape>
        </clip>
    </item>

</layer-list>